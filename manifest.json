{
  "manifest_version": 2,
  "name": "ProductionSafe",
  "description": "A simple app that broadcasts a gigantic warning banner when you are on a production site.",
  "version": "0.1",
  "permissions": [
    "tabs", "storage", "http://*/*", "https://*/"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon-16.png",
    "default_popup": "views/popup.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  }
}
